<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dp" />
            <stroke android:width="1dp" android:color="#284682" />
            <gradient android:angle="-90" android:startColor="#ECE9E9" android:endColor="#C5CDF1" />
        </shape>

        <!--#284682;-->
        <!--border-color: #223b6f;-->
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dp" android:color="#7FA5EF" />
            <gradient android:angle="-90" android:startColor="#E6EEF1" android:endColor="#D1D7F4" />

        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dp" />
            <stroke android:width="1dp" android:color="#C1C0C0" />
            <gradient android:angle="-90" android:startColor="#fff" android:endColor="#DAE0FA" />
        </shape>
    </item>

</selector>